#question-page
  .strip
    h1
      width: 90%
      margin: 0 auto
    .details
      display: inline-block
      font-size: 1.5em
      margin: 0.75em 0
      letter-spacing: 4px
      color: $blue
      text-decoration: none
      padding-bottom: 5px
      // border-bottom: 4px solid $blue
      box-shadow: 0px 17px 0px -13px rgba($white, 0.5)
      transition: all 300ms ease-in-out
      &:hover
        padding-bottom: 10px
        box-shadow: 0px 4px 0 0 rgba($white, 0.8)
        padding: 0 3em
        color: lighten($blue, 50%)
    #question-form
      width: 80%
      margin: 1em auto
      display: flex
      flex-wrap: wrap
      justify-content: space-between
      @media (max-width: 700px)
        font-size: 140%
      #name, .select-wrapper
        width: 48%
        @media (max-width: 700px)
          width: 100%
      .select-wrapper
        position: relative
        &:before
          font-family: 'FontAwesome'
          content: '\F0DD'
          position: absolute
          right: 1.25em
          top: 1em
        #team
          appearance: none
          -webkit-appearance: none
          width: 100%
      #answer, #question
        width: 100%
        padding: 0.5em 0.75em
        font-size: 1.2em
      #submit
        width: 50%
        font-size: 1.1em
        letter-spacing: 5px
        padding: 1em
        background-color: $blue
        margin: 0.75em auto
        transition: 200ms ease-in-out
        &:hover
          background-color: darken($blue, 8%)
      input, select
        color: $white
        background-color: $bg
        border: 2px solid rgba($white, 0.3)
        border-radius: 4px
        padding: 0.5em 1em
        margin: 0.5em 0
