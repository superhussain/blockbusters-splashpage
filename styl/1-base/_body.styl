*
  box-sizing: border-box;
h1,h2,h3,h4,h5,h6
  font-weight: 400
  margin: 0
h1
  font-family: 'Homestead Inline'
body
  overflow-x: hidden;
  background-image: url(../img/bg-tile.jpg)
  font-family: 'Homestead'
  font-size: 16px
  @media (max-width: 700px)
    font-size: 70%
  .container
    min-height: 100vh
    text-align: center
    color: $white
    display: flex
    flex-direction: column
    justify-content: space-around
    .logo
      width: 95%
      max-width: 400px
      margin: 3em auto
      img
        width: 100%
    .strip
      background-color: $bg-strip
      padding: 2em 1em
      h1
        font-size: 3em
      h2
        font-size: 1.8em
        letter-spacing: 5px
        margin-bottom: 1.3em
      p
        font-size: 1.3em
        letter-spacing: 1px
        font-weight: 100
        margin: 0.25em 0
      .register-button
        display: block
        width: 90%
        max-width: 400px
        margin: 1.5em auto 1em
        font-size: 1.8em
        letter-spacing: 3px
        color: $white
        background-color: $blue
        padding: 0.75em
        text-decoration: none
        border-radius: 3px
        border-bottom: 8px solid darken($blue, 20%)
        transition: all 100ms ease-in-out
        &:hover
          border-bottom: 4px solid darken($blue, 20%)
          margin-top: calc(1.5em + 2px)
          transform: translateY(2px)
    .social 
      margin: 3em auto
      font-size: 0.9em
      .social-wrap
        width: 95%
        max-width: 300px
        margin: 1em auto 0
        display: flex 
        justify-content: space-around
        a
          color: rgba($white, 0.9)
          font-size: 3.5em
          transition: 300ms ease-in-out
        .facebook:hover
          color: #3b5998
        .twitter:hover
          color: #0084b4
        .instagram:hover
          color: #125688
